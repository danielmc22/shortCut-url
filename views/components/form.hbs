{{#if urlx}}

    <form action="/editar/{{urlx._id}}" method="post">
        <input type="hidden" name="_csrf" value="{{csrfToken}}" />
        <input value="{{urlx.origin}}"  type="text" placeholder="ingrese la Url" name="origin" class="form-control my-2">
        <button type="submit" class="btn btn-warning w-100 mb-2">Editar URL</button>
    </form>

    {{else}}

    <form action="/" method="post">
        <input type="hidden" name="_csrf" value="{{csrfToken}}" />
        <input type="text" placeholder="ingrese la Url" name="origin" class="form-control my-2">
        <button type="submit" class="btn btn-primary w-100 mb-2">Agregar URL</button>
    </form>

{{/if}}
